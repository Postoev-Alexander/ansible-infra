services:
  postgres:
    image: postgres:17.6
    container_name: "{{ postgres_project_name }}"
    restart: always
    ports:
      - "5432:5432"
    environment:
      POSTGRES_DB: "{{ postgres_db_name }}"
      POSTGRES_USER: "{{ postgres_db_user }}"
      POSTGRES_PASSWORD: "{{ postgres_db_password }}"

    volumes:
      - "{{ postgres_volume_name }}:/var/lib/postgresql/data"
      - "{{ postgres_config_path }}/certs/server.crt:/etc/ssl/certs/server.crt:ro"
      - "{{ postgres_config_path }}/certs/server.key:/etc/ssl/private/server.key:ro"
      - "{{ postgres_config_path }}/postgresql.conf:/var/lib/postgresql/data/postgresql.conf:ro"
      - "{{ postgres_config_path }}/pg_hba.conf:/var/lib/postgresql/data/pg_hba.conf:ro"     

volumes:
  "{{ postgres_volume_name }}":
    external: true